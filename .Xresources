!Xcursor.size: 16
URxvt.scrollBar: false
!URxvt.letterSpace: -1
!URxvt.termName: rxvt-unicode

! Transparency on X
!URxvt.transparent: true
!URxvt.shading: 110
!URxvt.tintColor: #3f3f3f

! Transparency with wlc
!URxvt.depth: 32
!URxvt.background: rgba:0000/0000/0200/c800

! Zenburn color-scheme
URxvt.background              :#3f3f3f
!URxvt.background              :#1f1f1f
URxvt.foreground              :#dcdccc

! ! black + red
URxvt.color0                  :#3f3f3f
!URxvt.color0                  :#1f1f1f
URxvt.color1                  :#705050

! ! green + yellow
URxvt.color2                  :#60b48a
URxvt.color3                  :#dfaf8f
!
! ! blue + purple
URxvt.color4                  :#506070
URxvt.color5                  :#dc8cc3

! ! cyan + white
URxvt.color6                  :#8cd0d3
URxvt.color7                  :#dcdccc
!
! ! bright-black + bright-red
URxvt.color8                  :#709080
URxvt.color9                  :#dca3a3
!
! ! bright-green + bright-yellow
URxvt.color10                 :#c3bf9f
URxvt.color11                 :#f0dfaf
!
! ! bright-blue + bright-purple
URxvt.color12                 :#94bff3
URxvt.color13                 :#ec93d3
!
! ! bright-cyan + bright-white
URxvt.color14                 :#93e0e3
URxvt.color15                 :#ffffff

URxvt.font:     xft:Inconsolata:size=14
URxvt.boldFont: xft:Inconsolata:bold:size=14
!URxvt.font:     xft:dejavusansmono:size=12
!URxvt.boldFont: xft:dejavusansmono:bold:size=12
!URxvt.font:     xft:droidsansmono:size=13
!URxvt.boldFont: xft:droidsansmono:bold:size=13

Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

Xcursor.size: 16

emacs.font: Inconsolata-14
